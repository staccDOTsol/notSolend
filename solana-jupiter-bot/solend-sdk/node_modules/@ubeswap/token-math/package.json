{
  "name": "@ubeswap/token-math",
  "author": "Ian Macalinao <ian@ubeswap.org>",
  "license": "MIT",
  "version": "5.2.0",
  "description": "⚒️ A library for token math.",
  "website": "https://ubeswap.org",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "src/",
    "dist/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": "https://github.com/Ubeswap/token-math.git",
  "keywords": [
    "uniswap",
    "ethereum",
    "token",
    "ubeswap"
  ],
  "scripts": {
    "build": "tsc -P tsconfig.build.json && tsc -P tsconfig.esm.json",
    "clean": "rm -r dist/",
    "typecheck": "tsc",
    "lint": "eslint .",
    "test": "jest",
    "prepublishOnly": "npm run clean && npm run build",
    "prepare": "husky install"
  },
  "dependencies": {
    "@types/big.js": "^6.1.5",
    "big.js": "^6.2.1",
    "decimal.js-light": "^2.5.1",
    "tiny-invariant": "^1.2.0",
    "tslib": "^2.4.0"
  },
  "peerDependencies": {
    "jsbi": "^3 || ^4"
  },
  "devDependencies": {
    "@jest/types": "^28.1.3",
    "@rushstack/eslint-patch": "^1.1.4",
    "@saberhq/eslint-config": "^2.0.2",
    "@saberhq/tsconfig": "^2.0.2",
    "@types/eslint": "^8.4.5",
    "@types/jest": "^28.1.5",
    "@yarnpkg/doctor": "^3.1.3",
    "eslint": "^8.19.0",
    "eslint-import-resolver-node": "^0.3.6",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-runtime": "^28.1.3",
    "jsbi": "^4.3.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=10"
  },
  "lint-staged": {
    "*.{ts,tsx,cjs,mjs}": "eslint --fix",
    "*.{css,html,js,json,jsx,md,sass,scss,vue,yaml,yml}": "prettier --write"
  },
  "packageManager": "yarn@3.2.1"
}